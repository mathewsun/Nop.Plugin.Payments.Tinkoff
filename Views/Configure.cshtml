@model Nop.Plugin.Payments.Tinkoff.Models.TinkoffConfigureModel
@inject Nop.Core.IWebHelper webHelper
@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="Tinkoff" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="UseSandbox" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="UseSandbox" />
                        <span asp-validation-for="UseSandbox"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="SandboxTerminalKey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="SandboxTerminalKey" />
                        <span asp-validation-for="SandboxTerminalKey"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="SandboxPassword" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="SandboxPassword" />
                        <span asp-validation-for="SandboxPassword"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="WorkTerminalKey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="WorkTerminalKey" />
                        <span asp-validation-for="WorkTerminalKey"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="WorkPassword" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="WorkPassword" />
                        <span asp-validation-for="WorkPassword"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="Commission" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Commission" />
                        <span asp-validation-for="Commission"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>